@model IEnumerable<Group12_iCAREAPP.Models.iCAREAdmin>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@* <h2>Index</h2> *@
<h2>iCARE Admins</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dateHired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateFinished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iCAREUser.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dateHired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateFinished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iCAREUser.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-secondary btn-sm mr-2" })
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-secondary btn-sm mr-2" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-secondary btn-sm" })
            </td>
        </tr>
    }

</table>
