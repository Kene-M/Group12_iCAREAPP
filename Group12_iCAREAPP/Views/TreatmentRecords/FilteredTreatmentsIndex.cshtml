@model IEnumerable<Group12_iCAREAPP.Models.TreatmentRecord>

@{
    ViewBag.Title = "FilteredTreatmentsIndex";
}

@{
    Layout = "~/Views/Shared/WorkerLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #e6f7e6; /* Light green background */
        color: #333;
        margin: 0;
        padding: 0;
    }

    /* Table styling */
    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    /* Table header */
    th {
        background-color: #66a3a3; /* Dark green accent */
        color: black;
        font-weight: bold;
        padding: 15px;
        text-align: left;
    }

    /* Table rows */
    td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    /* Alternate row colors */
    tr:nth-child(even) {
        background-color: #f2f2f2; /* Light gray for alternating rows */
    }

    /* Hover effect on rows */
    tr:hover {
        background-color: #d0ebd0; /* Light green hover effect */
    }

    /* Headings */
    h1, h2, h3 {
        text-align: center;
        color: #2b7a78; /* Blue-green accent */
    }

    /* Button styling */
    button, input[type="submit"] {
        background-color: #2b7a78; /* Blue-green accent */
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin: 10px auto;
        display: block;
        transition: background-color 0.3s ease;
    }

        button:hover, input[type="submit"]:hover {
            background-color: #226d6b; /* Darker blue-green on hover */
        }

    /* Text styling */
    label {
        font-weight: bold;
        color: #2b7a78; /* Blue-green accent for labels */
    }

    /* Form inputs */
    input[type="text"], input[type="date"], input[type="datetime-local"] {
        padding: 8px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: calc(100% - 20px);
        box-sizing: border-box;
    }
</style>

@* <h2>Index</h2> *@
<h2>Treatment Records</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
         Treatment ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientRecord.name)
        </th>
        <th>
        Worker ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.treatmentDate)
        </th>

        <th></th>
    </tr>

     @foreach (var item in Model)
        {
            <tr>
                <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientRecord.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.iCAREWorker.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.treatmentDate)
                    </td>
                    <td>
                @Html.ActionLink("Edit", "Edit", new { workerID=item.workerID, patientID=item.patientID }) |
                @Html.ActionLink("Details", "Details", new { workerID = item.workerID, patientID = item.patientID }) |
                @Html.ActionLink("Delete", "Delete", new { workerID = item.workerID, patientID = item.patientID }) |
                @Html.ActionLink("Release", "Release", new { workerID = item.workerID, patientID = item.patientID })
                    </td>
            </tr>
        }
</table>
